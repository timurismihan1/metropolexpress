@using evdeneveturkiye.CompanyParams;


@section Title{
    <title>
        İletişim | İstediğiniz İletişim Kanalından Bizlere Ulaşabilirsiniz
    </title>
    }


<div class="breadcrumb-area  margin-bottom-120" style="background-image:url(assets/img/breadcrumb/01.png);">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-inner">
                    <h2 class="page-title">İletişim</h2>
                    <ul class="page-list">
                        <li><a href="/">Ana Sayfa</a></li>
                        <li><a href="/iletisim">İletişim</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="inner-contact-section m-bottom padding-top-120">
    <div class="container">
        <div class="inner-contact-wrapper bg-white">
            <div class="row">
                <div class="col-md-6">
                    <div class="content-area padding-top-120 padding-bottom-90">
                        <div class="section-title padding-bottom-15">
                            <h4 class="title"><b>Metropol Express</b> ile kalın</h4>
                        </div>
                        <div class="single-contact-item">
                            <div class="icon">
                                <i class="flaticon-map"></i>
                            </div>
                            <div class="content">
                                <span class="title">
                                    Adres
                                </span>
                                <p class="details">@CompanyParams.Address</p>
                            </div>
                        </div>
                        <div class="single-contact-item">
                            <div class="icon">
                                <i class="flaticon-phone"></i>
                            </div>
                            <div class="content">
                                <span class="title">İletişim Numaraları</span>
                                <p class="details">@CompanyParams.Phone</p>
                                <p class="details">@CompanyParams.Phone2</p>
                                <p class="details">@CompanyParams.Phone3</p>
                            </div>
                        </div>
                        <div class="single-contact-item">
                            <div class="icon">
                                <i class="flaticon-mail-2"></i>
                            </div>
                            <div class="content">
                                <span class="title">Email</span>
                                <p class="details">@CompanyParams.Email</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="contact_map">
                        <div id="map"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contact-section padding-bottom-120 padding-top-350 bg-image" style="background-image: url(assets/img/bg/09.png);">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-lg-12">
                <div class="contact-info" id="formSection">
                    <form id="contactForm" class="contact-page-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="NameSurname" placeholder="İsim Soyisim">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="email" class="form-control" name="Email" placeholder="Email">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="Phone" placeholder="Telefon">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="Subject" placeholder="Konu">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <textarea class="form-control" cols="4" name="Message" rows="4" placeholder="Mesajınızı buraya yazabilirsiniz..."></textarea>
                                </div>
                                <div class="btn-wrapper desktop-center">
                                    <button type="button" class="boxed-btn reverse-color" onclick="SendEmail()">Mesaj Gönder</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 d-none" id="successAlert">
    <div class="alert alert-success" role="alert" >
        Tebrikler! Mesajınız alındı.En kısa sürede yanıt verilektir.
    </div>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 d-none" id="errorAlert">
    <div class="alert alert-danger" role="alert">
        Hata mesajınız gönderilemedi.Lütfen Sayfayı yenileyip tekrar deneyin!
    </div>
</div>
@section Scripts{

    <script>
         function SendEmail(){
            var model = $('#contactForm').serializeArray();
            $.ajax({
                url: '/Home/SendEmail',
                data:  model ,
                dataType: 'json',
                success: function (res) {
                    
                   if(res == true){
                        var alert = $('#successAlert').html();
                        $(alert).css({ "display": "block" });
                        $('#formSection').empty().html(alert);
                   }
                   else{
                        var alert = $('#errorAlert').html();
                        $(alert).css({"display":"block"});
                        $('#formSection').empty().html(alert);
                   }
                }
            });
         }
    </script>
}